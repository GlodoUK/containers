{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "automerge": true,
  "rebaseWhen": "conflicted",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process Annotations in versions.yaml",
      "managerFilePatterns": ["/(^|/)versions.yaml$/"],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.*?\"(?<currentValue>.*)\"\\n"
      ]
    },
    {
      "customType": "regex",
      "description": "Process Annotations in Dockerfiles",
      "managerFilePatterns": ["/(^|/)Dockerfile$/"],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\n.+(:\\s|=)(&\\S+\\s)?(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["postgres"],
      "enabled": false
    },
    {
      "matchPackageNames": ["postgres"],
      "groupName": "postgresql"
    },
    {
      "matchPackageNames": ["debian"],
      "enabled": true,
      "versioning": "debian"
    }
  ]
}
